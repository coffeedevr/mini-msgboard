extends layout

block content
  div#form-wrapper
    div#form-title
      h2 Sign Up
    div#form-errors
      if errors 
        p We found errors in your submission:
        ul 
          for error in errors 
            li!= error.msg
    form.form-thread(method="POST" action="")
      //- label(for="user") Type User name:
      //- input.form-controls(type="text" for="user" id="user" name="user" placeholder="Enter your name here... (optional)")
      div.form-input-wrapper
        label.form-create-control(for="username") Username:
        input.form-controls(type="text" for="username" name="username" )
      .form-input-wrapper 
        label.form-create-control(for="email") Email Address: 
        input.form-controls(type="email" for="email" name="email")
      div.form-input-wrapper
        label.form-create-control(for="password") Password:
        input.form-controls(type="password" for="password" name="password")
      div.form-input-wrapper
        label.form-create-control(for="passwordConfirm") Confirm Password:
        input.form-controls(type="passwordConfirm" for="passwordConfirm" name="passwordConfirm")
      button#btn-create-form.form-submit(type="submit") Sign Up
    p#signup-text Have an account already? <a href="/log-in">Log in here.</a>